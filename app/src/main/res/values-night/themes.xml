<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GitHubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_dark</item>
        <item name="colorOnPrimary">@color/white_shade</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_darker</item>
        <item name="android:navigationBarColor">@color/primary_darker</item>
        <item name="colorAccent">@color/teal_dark</item>
    </style>

    <style name="Side.Navbar.Theme" parent="Base.Theme.GitHubUser">
        <item name="android:centerColor">@color/teal</item>
        <item name="android:endColor">@color/primary_dark</item>
        <item name="android:startColor">@color/teal_dark</item>
    </style>

    <style name="Card.theme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/primary_darker</item>
    </style>


    <style name="Splash.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_dark</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_darker</item>
        <item name="android:navigationBarColor">@color/primary_darker</item>
    </style>
</resources>