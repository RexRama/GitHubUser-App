<resources>

    <style name="Base.Theme.GitHubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_dark</item>
        <item name="android:colorBackground">@color/white_teal</item>
        <item name="colorOnPrimary">@color/white_shade</item>
        <item name="android:statusBarColor">@color/teal_light</item>
        <item name="android:navigationBarColor">@color/teal_light</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="Side.Navbar.Theme" parent="Base.Theme.GitHubUser">
        <item name="android:centerColor">@color/teal</item>
        <item name="android:endColor">@color/teal_light</item>
        <item name="android:startColor">@color/teal_dark</item>
    </style>

    <style name="Theme.GitHubUser" parent="Base.Theme.GitHubUser" />


    <style name="Card.theme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/teal_light</item>
    </style>

    <style name="tv_detail">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Splash.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_dark</item>
        <item name="android:colorBackground">@color/white_teal</item>
        <item name="android:statusBarColor">@color/teal_light</item>
        <item name="android:navigationBarColor">@color/teal_light</item>
    </style>
</resources>